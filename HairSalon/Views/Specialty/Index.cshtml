@{
Layout = "_Layout";
}
<div class="container">
<h1>Specialties</h1>
<hr>

@if (@Model.Count != 0)
{
  <ol>
    @foreach (var specialty in @Model)
    {
      <li><h4><a href='/specialties/@specialty.GetSpecialtyId()'>@specialty.GetSpecialtyName()</a> <br>  <a href="/specialties/@specialty.GetSpecialtyId()/update">Edit</a> | <a method="post" href="/specialties/@specialty.GetSpecialtyId()/delete">Delete</a></h4> </li>

    }
  </ol>
}
<hr>
<form action="specialties/delete" method="post">
<a href="/specialties/new" class="btn btn-success">Add a new Specialty</a>
<button type="submit" class="btn btn-danger">Clear </button>
</form>
</div>
