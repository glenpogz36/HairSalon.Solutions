@{
  Layout = "_Layout";
}
<hr>
<div class="container">
<h1>Add a new  Style</h1>
<form action="/stylists" method="post">
<label name="stylistname">Specialty </label>
<input name="stylistname" id="stylistname" type="text">
<select id="stylistemployee" name="stylistemployee">
  @foreach (var employee in Model)
  {
    <option value=@employee.GetId()>@employee.GetName()</option>
  }
</select>
<label name="customers">Enter number of customer </label>
<input name="customers" id="customers" type="number">
 <button class="btn btn-primary" type='submit'>Add new Style</button>
</form>
</div>
<hr>
<a href="/stylists" class="btn btn-info">Back to Styles</a>