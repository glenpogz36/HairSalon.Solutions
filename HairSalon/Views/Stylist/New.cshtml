@{
  Layout = "_Layout";
}
<hr>
<div class="container">
<h1>Add a new  Style</h1>
<form action="/styles" method="post">
<label name="style">Specialty </label>
<input name="style" id="style" type="text">
<select id="stylistEmployee" name="stylistEmployee">
  @foreach (var employee in Model)
  {
    <option value=@employee.GetId()>@employee.GetName()</option>
  }
</select>
<label name="customer">Enter number of customer </label>
<input name="customer" id="customer" type="number">
 <button class="btn btn-primary" type='submit'>Add new Style</button>
</form>
</div>
<hr>
<a href="/styles" class="btn btn-info">Back to Styles</a>